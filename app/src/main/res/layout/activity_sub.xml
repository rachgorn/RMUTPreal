<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/subpage"
    android:paddingLeft="35dp"
    android:paddingRight="35dp"
    tools:context="com.example.oay_pc.rmutpbuilding.SubActivity">

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/ButtonSub1"
        android:layout_marginBottom="73dp"
        android:background="@drawable/select"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp">
    </Button>
    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/ButtonSub2"
        android:layout_alignTop="@+id/ButtonSub1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/help"
        />
    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/ButtonSub3"
        android:background="@drawable/about"
        android:layout_alignTop="@+id/ButtonSub2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="  เลือกคณะ"
    android:textColor="#FFFFFF"
    android:layout_marginTop="10dp"
    android:id="@+id/textView"
    android:layout_below="@+id/ButtonSub2"
    android:layout_alignLeft="@+id/ButtonSub1"
    android:layout_alignStart="@+id/ButtonSub1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ช่วยเหลือ"
        android:textColor="#FFFFFF"
        android:id="@+id/textView2"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="เกี่ยวกับเรา"
        android:textColor="#FFFFFF"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignRight="@+id/ButtonSub3"
        android:layout_alignEnd="@+id/ButtonSub3"
        />

</RelativeLayout>
